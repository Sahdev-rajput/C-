#include <iostream>
#include <string>
using namespace std;
int main()
{
	string str;
	getline(cin, str);
	int n = str.length();
	cout << n << endl;
	cout << endl << "there is also one way to do so"<<endl;
	int count = 0;
	for (int i = 0; str[i] != '\0'; i++)
	{
		count++;
	}
	cout << count;
	cout << endl;
	int my=0;
	string::iterator it;
	for (it = str.begin(); it != str.end(); it++)
	{
		my++;
	}
	cout << my << endl;
}
